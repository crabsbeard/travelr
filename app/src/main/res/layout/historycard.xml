<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dak Bangla!"
            android:textColor="#ff435d97"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_marginTop="12dp"
            android:text="This is the most haunted place I have ever been, Never ever try to go there."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="24.987"
            android:textColor="#ffae2b2b"
            android:textSize="10sp"
            android:textStyle="italic"
            android:layout_below="@+id/tv_reverse"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lat"
            android:layout_marginTop="8dp"
            android:text="71.876"
            android:textColor="#ffae2b2b"
            android:textSize="10sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_desc"
            android:layout_marginTop="12dp"
            android:text="Reverse Geocode Info" />
    </RelativeLayout>
</android.support.v7.widget.CardView>