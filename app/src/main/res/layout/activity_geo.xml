<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarGeo"
        layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/firstCard"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarGeo"
        android:layout_marginTop="56dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Dak Bangla!"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_firstCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Lat:21.223, Lon: 71.876"
                android:layout_below="@id/tv_firstCardName"
                android:layout_alignLeft="@id/tv_firstCardName"
                android:layout_marginTop="12dp"
                android:id="@+id/tv_firstCardLatLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/secondCard"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstCard"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_secondCardName"
                android:text="Dak Bangla!"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_secondCardLatLon"
                android:text="Lat:21.223, Lon: 71.876"
                android:layout_below="@id/tv_secondCardName"
                android:layout_alignLeft="@id/tv_secondCardName"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/thirdCard"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/secondCard"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_thirdCardName"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Dak Bangla!"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_thirdCardLatLon"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_thirdCardName"
                android:layout_alignLeft="@id/tv_thirdCardName"
                android:layout_marginTop="12dp"
                android:text="Lat:21.223, Lon: 71.876"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Geofencing"
        android:id="@+id/b_removeGeo"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginLeft="8dp"
        android:id="@+id/b_addGeoLocation"
        android:layout_alignTop="@+id/b_removeGeo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>